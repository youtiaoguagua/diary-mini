.my-book {
  height: 200rpx;
  position: relative;
}
.my-book .my-rishi {
  position: absolute;
  right: 0;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 0 30rpx;
  text-shadow: 2rpx 2rpx 5rpx rgba(0, 0, 0, 0.5);
}
.my-book .my-rishi .title {
  font-size: 24rpx;
}
.my-book .my-rishi .arrow-left {
  text-align: center;
}
.my-book .my-rishi .arrow-left text {
  font-size: 24rpx;
}
.content {
  border-radius: 60rpx 60rpx 0 0;
  background-color: #FFFFFF;
  min-height: 500rpx;
  padding: 30rpx;
}
.content .hitokoto {
  text-align: center;
  font-size: 30rpx;
  font-weight: 800;
  padding-bottom: 20rpx;
}
.books-templete {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 30rpx;
  padding-top: 30rpx;
  grid-auto-rows: minmax(340rpx, auto);
}
.books-templete .book {
  background-color: #FF9900;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  border-radius: 8rpx;
  background-color: rgba(236, 240, 241, 0.6);
  box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}
.books-templete .book .top-picture {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  background-size: cover;
  background-repeat: no-repeat;
}
.books-templete .book .bottom-title {
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-weight: bold;
}



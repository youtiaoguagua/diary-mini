}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.content{
	height: 100vh;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.content:before{
	content: "";
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.2);
	z-index: 0;
}
.nav-bar{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 0 24rpx;
}
.nav-bar>image{
	width: 56rpx;
	height: 56rpx;
}
.content-body{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 100vh;
	z-index: 2;
}
.content-top{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	z-index: 3;
}
.countdown-body{
	color: #FFFFFF;
	text-align: center;
}
.content-bottom{
	/* height: 50%; */
}
.countdown-number{
	font-size: 120rpx;
	font-family: TXihei, "华文细黑", 
             serif;
	font-style: italic;
	font-weight: 900;
	text-align: center;
}
.countdown-content{
	font-size: 36rpx;
	font-weight: bold;
}
.countdown-time{
	font-size: 26rpx;
	font-weight: 800;
	margin: 20rpx 0;
}
.scroll-view{
	max-height: 54vh;
	padding: 0 20rpx;
	box-sizing: border-box;
}
.scroll-view-item{
	background: rgba(255,255,255,0.8);
	margin: 20rpx 0;
	border-radius: 28rpx;
	padding: 10rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.scroll-content{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.scroll-content>.title{
	font-weight: 800;
	font-size: 36rpx;
}
.scroll-content>.date{
	font-weight: 800;
	font-size: 22rpx;
	color: #909399;
}
.scroll-number{
	font-size: 84rpx;
	color: #007AFF;
	font-style: italic;
	margin-right: 14rpx;
}
